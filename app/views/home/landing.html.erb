<div class="clr"></div>

<div class="panels-box">

  <div class="landing-left-panel">

    <div class="box-col">
      <h3 class="middleh3">reason buy pitch</h3>

      <div class="box-col-topreason">
        <div class="rows-div">


          <div class="comments-container">
            <%= render :partial => 'shared/blips_list', :locals => {:objs => Pitch.buy_pitch.order("created_at DESC").all,
                                                                    :company => @company, :child_objs => nil,
                                                                    :objs_text => nil,
                                                                    :child_objs_text => nil,
                                                                    :show_link => true} %>
            <!-- end of comments-div -->

          </div><!-- end of comments-container -->


        </div><!-- end of rows-div -->





      </div>

      <div class="clr"></div>
    </div>

    <div class="box-col">
      <h3 class="middleh3">reason sell pitch</h3>

      <div class="box-col-topreason">
        <div class="rows-div">
          <%= render :partial => 'shared/blips_list', :locals => {:objs => Pitch.sell_pitch.order("created_at DESC").all,
                                                                  :company => @company, :child_objs => nil,
                                                                  :objs_text => nil,
                                                                  :child_objs_text => nil,
                                                                  :show_link => true} %>
        </div><!-- end of rows-div -->



      </div>

      <div class="clr"></div>
    </div>




  </div><!-- end of left-panel -->

  <div class="landing-right-panel">


      <div class="box-col">
        <div class="rows-div">
          <h3>Alph Blips<%= select_tag("sort_by", "<option value='desc'>Recent</option><option value='asc'>Old</option>".html_safe, class: "selectbox-global",
                                       data: {
                                               remote: true,
                                               url: "#.",
                                               update: "message_div_id"
                                       }
                            ) %></h3>
          <div id="blips_list" class="scroll">
            <%= render :partial => 'shared/blips_list', :locals => {:objs => @blips, :child_objs => nil, :objs_text => nil, :child_objs_text => nil} %></div><!-- end of rows-div -->





        </div>


        <div class="clr"></div>
      </div><!-- end of box div -->

      <div class="box-col">
        <h3>Stock Catalysis</h3>
        <div class="box-col-div">
          <%= render 'companies/catalyst' %>
        </div>
        <div class="clr"></div>
      </div>


      <div class="clr"></div>
    </div>

  </div><!-- end of right-panel -->

  <div class="clr"></div>
</div><!-- end of panels-box -->


</div>
<div class="clr"></div>
</div><!-- end of middle container -->