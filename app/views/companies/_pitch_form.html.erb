<%= form_for(Pitch.new, :url => company_pitches_path(@company),:remote => true, :html => {:class => 'form-horizontal'}, :validate => true) do |f| %>
    <p><%= f.label :action %></p>
    <p>
      <%= f.select :action, Blip::ACTIONS, { :selected => option  },:class => "selectbox" %>
    </p>

    <p><%= f.label :title %></p>
    <p><%= f.text_field :title ,:class => "inputbox"%>
    </p>

    <p><%= f.label :multimedia_content, "Content" %></p>
    <p>
      <%= f.text_area :multimedia_content, :class => "ckeditor", :toolbar => "Mini"%>
    </p>

    <p>
      <%= f.button 'Submit', id: 'create_reason', :class => 'button medium brown' %>
    </p>
<% end %>