<% if @append == true %>
	$("#top_reason_to_buy").append('<%=j raw (render :partial => "shared/pitches_list", :locals => {:objs => @pitchs,
	                                                                  :company => @company, :child_objs => nil,
	                                                                  :objs_text => nil,
	                                                                  :child_objs_text => nil,
	                                                                  :show_link => true, :show_ticker => true}).gsub!("\n", "") %>');


<% else %>
	$("#top_reason_to_buy").html('<%=j raw (render :partial => "shared/pitches_list", :locals => {:objs => @pitchs,
	                                                                  :company => @company, :child_objs => nil,
	                                                                  :objs_text => nil,
	                                                                  :child_objs_text => nil,
	                                                                  :show_link => true, :show_ticker => true}).gsub!("\n", "") %>');
<% end %>
$("#more-lp").spin(false);
$("#more-lp").html('More...');
$('#lp-pagination').html("<%= j will_paginate @pitchs, :param_name => 'lp_page', :id => 'lp-pagination'  %>");
$('#lp-pagination').hide();
url = $('#lp-pagination .next_page').attr('href');
if (!url) {
	$("#more-lp").html('');
}