<%= current_user.blog%>
<%= link_to "Edit", "#.",
            :id => "blog" ,
            :onclick => "show_user_blog()", :class => "readmore-link" %>
<div class="slide-div" id="show_blog_down" style="display: none">
  <%= form_for(User.new, :remote => true, url: users_path(:id => current_user.id),
               update: "message_div_id", :method => 'put') do |f| %>

      <%=	 f.label :blog %>
      <%= f.text_area :blog %>



      <%= f.submit 'Save' ,:class => "button medium brown" %>
  <% end %>
</div>
