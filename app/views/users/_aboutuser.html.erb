<p><%= @user.aboutuser%></p>
<% if user_signed_in? && @user.id == current_user.id %>
<%= link_to "Edit", "#.",
            :id => "about_user" ,
            :onclick => "show_about_user()", :class => "readmore-link" %>
<div class="slide-div" id="show_user_down" style="display: none">
  <%= form_for(current_user, :remote => true, url: users_path(:id => current_user.id),
               update: "message_div_id", :method => 'put') do |f| %>

      <%= f.text_area :aboutuser, :cols => "27",:rows => 5 %>



      <%= f.submit 'Save' ,:class => "button medium brown" %>
  <% end %>
</div>
<% end %>