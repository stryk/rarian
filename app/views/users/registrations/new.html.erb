<div id="middle-container">
  <div class="row">
    <div class="content-area">
      <h2 class="page-title">Sign Up</h2>

      <div class="sign-container">

        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => true, :html => {:class => 'form-vertical'}) do |f| %>

          <p><label class="lbltxt">Name</label><em>*</em><br>
            <label class="input-box">
              <%= f.text_field :name, :autofocus => true, :class => "inputbox input-required", :validate => { :presence => true } %>
            </label></p>

          <p><label class="lbltxt">Email</label><em>*</em><br>
            <label class="input-box">
              <%= f.email_field :email, :autofocus => true, :class => "inputbox input-required", :validate => { :presence => true } %>
            </label>
          </p>

          <p><label class="lbltxt">Password</label><em>*</em><br>
            <label class="input-box">
              <%= f.password_field :password, :class => "inputbox  input-required", :validate => { :presence => true } %>
            </label></p>

          <p><label class="lbltxt">Password Confirmation</label><em>*</em><br>
            <label class="input-box"><%= f.password_field :password_confirmation, :class => "inputbox input-required", :validate => { :presence => true } %></label></p>

          <p><label class="lbltxt">Mobile Number</label><em>*</em><br>
            <label class="input-box"><%= f.text_field :mobilenumber, :class => "inputbox input-required" %></label></p>

          <% if Rails.env == "development" %>
            <% for role in User::ROLES %>
              <%= check_box_tag "user[roles][#{role}]", role, @user.roles.include?(role), {:name => "user[roles][]"} %>
              <%= label_tag "user_roles_#{role}", role.humanize %><br />
            <% end %>
            <%= hidden_field_tag "user[roles][]", "" %>
          <% end %>

          <p>
            <%= f.submit "Sign up", :class => 'button medium  brown' %>
          </p>

          <p>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
            <% end -%>
            </p>


        <% end %>

      </div>
      <!-- end of sign container -->


      <div class="clr"></div>
    </div>

  </div>
</div><!-- end of middle contaienr -->


