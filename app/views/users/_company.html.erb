<p><%= @user.company%></p>
<% if user_signed_in? && @user.id == current_user.id %>
<%= link_to "Edit", "#.",
            :id => "company" ,
            :onclick => "show_user_company()", :class => "readmore-link" %>
<div class="slide-div" id="show_company_down" style="display: none">
  <%= form_for(current_user, :remote => true, url: users_path(:id => current_user.id),
               update: "message_div_id", :method => 'put') do |f| %>

      <%= f.text_area :company, id: "company-text", :cols => "27",:rows => 5  %>



      <%= f.submit 'Save' ,:class => "button medium brown" %>
  <% end %>
</div>
<script type="text/javascript">
    	$("#company-text").maxlength({max: 250});
	</script>
<% end %>