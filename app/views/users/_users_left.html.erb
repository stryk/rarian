<div class="panels-box">
  <div class="left-panel">

    <div class="box-col">
      <h3>About : <%= @user.name %></h3>
      <div class="box-col-div">
        <%= image_tag @user.image_url(:thumb).to_s %>
        <% if @user.id == current_user.id %>
        <%= form_for @user, :method => 'post', :url => { :action => "imageuploader" }, :html => {:multipart => true} do |f| %>

            <%= f.file_field :image %>
            <%= f.submit 'save'%>
        <%end%>
        <%end%>

        <%#    TopUser.get_user_companies(current_user, 5).each do |top_user| %>
              <%#= link_to top_user.company.ticker, company_path(top_user.company) %> <!--(<%#= top_user.no_of_votes %>)-->
          <%# end %>

      </div>
      <div class="clr"></div>
    </div>

    <div class="box-col">
      <h3><%= @user.name %> wizards</h3>
      <div class="box-col-div">
        <ol>
          <% TopUser.get_user_companies(@user, 5).each do |top_user| %>
            <li><%= link_to top_user.company.ticker, company_path(top_user.company) %> (<%= top_user.no_of_votes %>)</li>
          <% end %>
        </ol>
      </div>
      <div class="clr"></div>
    </div>



    <div class="box-col">
      <h3><%= @user.name %> Contributions</h3>
      <div class="box-col-div">
        <ol>
          <% @user.get_contributions.each do |key, value| %>
            <li><%= key %> (<%= value %>)</li>
          <% end %>
        </ol>
      </div>
      <div class="clr"></div>
    </div>




  </div>

</div>
