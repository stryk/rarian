
<div class="clr"></div>

<%= render 'users_left' %>
<span id="uid" data-uid="<%= @user.id %>"></span>

<div class="middle-panel">
  
    <div class="box-col middle-margin">
    
      <h3>Alpha
        Blips
        <div style="float:right"><span class="dropdown">
          <%= select_tag("blip_sort_by", "<option value='desc'>Latest</option><option value='asc'>Oldest</option>".html_safe, class: "selectbox-global") %>
        </span></div>
      </h3>

      <!--<div class="small-follow-btn"><a href="#"></a></div>-->
      <div class="box-col-topreason">
      <div class="rows-div">
      <div id="blips_list" class="scroll">
        <%= render :partial => 'shared/blips_list', :locals => {:objs => @blips,:child_objs => nil, :objs_text => nil, :child_objs_text => nil,
            :show_ticker => true} %>
      </div>
      <a href="#" class="more-content" id="more-blp">More...</a>
      <div id="blp-pagination"><%= will_paginate @blips, :param_name => 'blp_page'%></div>

    </div>
  </div>
</div>
  
  <div class="box-col middle-margin">
    <h3 class="middleh3">Long Pitches
      <div style="float:right"><span class="dropdown">
        <%= select_tag("buy_sort", "<option value='desc'>Latest</option><option value='asc'>Oldest</option>".html_safe, class: "selectbox-global") %>
      </span></div>
      </h3>
      <div class="box-col-topreason">
      <div class="rows-div">
    <div id="buy_list" class="scroll">
      <%= render :partial => 'shared/pitches_list', :locals => {:objs => @buypitchs,
                                                                    :company => @company, :child_objs => nil,
                                                                    :objs_text => nil,
                                                                    :child_objs_text => nil,
                                                                    :show_link => true,
                                                                     :show_ticker => true
                                                                  } %>
  </div>
    <a href="#" class="more-content" id="more-lp">More...</a>
    <div id="lp-pagination"><%= will_paginate @buypitchs, :param_name => 'lp_page'%></div>
  </div>
</div>
</div>
  <div class="box-col middle-margin">
    <h3 class="middleh3">Short Pitches
      <div style="float:right"><span class="dropdown">
        <%= select_tag("sell_sort", "<option value='desc'>Latest</option><option value='asc'>Oldest</option>".html_safe, class: "selectbox-global") %>
      </span></div>
    </h3>
    <div class="box-col-topreason">
      <div class="rows-div">
    <div id="sell_list" class="scroll">
      <%= render :partial => 'shared/pitches_list', :locals => {:objs => @sellpitchs,
                                                                    :company => @company, :child_objs => nil,
                                                                    :objs_text => nil,
                                                                    :child_objs_text => nil,
                                                                    :show_link => true,
                                                                     :show_ticker => true
                                                                  } %>

  </div>
    <a href="#" class="more-content" id="more-sp">More...</a>
    <div id="sp-pagination"><%= will_paginate @sellpitchs, :param_name => 'sp_page'%></div>
  </div>
</div></div>
  <div class="box-col middle-margin">
    <h3 class="middleh3">Questions
      <div style="float:right"><span class="dropdown">
      <%= select_tag("question_sort","<option value='desc'>Latest</option><option value='asc'>Oldest</option>".html_safe, class: "selectbox-global") %>
      </span> </div>
      </h3>
      <div class="box-col-topreason">
      <div class="rows-div">
    <div id="question_list" class="scroll">
      <%= render :partial => 'users/question', :locals => {:objs => @question,
                                                            :child_objs => nil,
                                                            :objs_text => nil,
                                                            :child_objs_text => nil,
                                                            :show_link => true} %>

  </div>
    </div>
  </div></div>
  <div class="box-col middle-margin">
    <h3 class="middleh3">Answers
      <div style="float:right"><span class="dropdown">
      <%= select_tag("answer_sort", "<option value='desc'>Latest</option><option value='asc'>Oldest</option>".html_safe, class: "selectbox-global") %>
    </span></div>
  </h3>
  <div class="box-col-topreason">
      <div class="rows-div">
    <div id="answer_list" class="scroll">
      <%= render :partial => 'users/answer', :locals => {:objs => @answer,
                                                           :child_objs => nil,
                                                           :objs_text => nil,
                                                           :child_objs_text => nil,
                                                           :show_link => true} %>

  </div>

          </div></div></div>
  <div class="box-col middle-margin">
    <h3 class="middleh3">Comments
      <div style="float:right"><span class="dropdown">
      <%= select_tag("comment_sort", "<option value='desc'>Latest</option><option value='asc'>Oldest</option>".html_safe, class: "selectbox-global") %>
    </span></div>
     </h3>
     <div class="box-col-topreason">
      <div class="rows-div">
    <div id="comment_list" class="scroll">
      <%= render :partial => 'users/comment', :locals => {:objs => @comment,
                                                         :child_objs => nil,
                                                         :objs_text => nil,
                                                         :child_objs_text => nil,
                                                         :show_link => true} %>
     </div>

          </div>
        </div></div>
  <div class="clr"></div>
</div>

<div class="right-panel">

  <div class="box-col">
    <h3>About Me</h3>
    <div id="aboutuser_list" class="box-col-div">
      <%= render :partial => 'users/aboutuser' %>

    </div>

    <div class="clr"></div>
  </div>

  <div class="box-col">
    <h3>Interest/Expertise: </h3>
    <div id="interest_list" class="box-col-div">
      <%= render :partial => 'users/interest' %>
    </div>
    <div class="clr"></div>
  </div>


  <div class="box-col">
    <h3>Company: </h3>
    <div id='company_list' class="box-col-div">
     <%= render :partial => 'users/company' %>
    </div>
    <div class="clr"></div>
  </div>


  <div class="box-col">
    <h3>Blog: </h3>
    <div id='blog_list' class="box-col-div">
      <%= render :partial => 'users/blog' %>
    </div>
    <div class="clr"></div>
  </div>
</div>


<script>
    function show_about_user(){
        $("#show_user_down").toggle("slideDown(1000)");
        return false;
    }

    function show_user_interest(){
        $("#show_interest_down").toggle("slideDown(1000)");
        return false;
    }

    function show_user_company(){
        $("#show_company_down").toggle("slideDown(1000)");
        return false;
    }

    function show_user_blog(){
        $("#show_blog_down").toggle("slideDown(1000)");
        return false;
    }



</script>


