<h3>Alph Blips (Limit 140 characters per
  blip) <%= select_tag("sort_by", "<option value='desc'>Recent</option><option value='asc'>Old</option>".html_safe, class: "span3",
                       data: {
                         remote: true,
                         url: company_blips_path(@company),
                         update: "message_div_id"
                       }
            ) %></h3><!--<div class="small-follow-btn"><a href="#"></a></div>-->

<div class="box-col-div">
  <div id="blips_list" class="scroll">
    <%= render :partial => 'shared/blips_list', :locals => {:objs => @blips, :company => @company, :child_objs => nil, :objs_text => nil, :child_objs_text => nil} %>
  </div>
  <% if current_user %>
    <p><input type="text" value="Edit content here..." class="box-input"></p>

    <p><a href="#." role="button" class="readmore-link" id="new_blip_<%= @company.id %>">Write Blip</a>
    </p>

    <div style="display: none" id='new_blip_slide_down_<%= @company.id %>'>
      <%= render :partial => 'shared/add_blip', :locals => {:company => @company} %>
    </div>
    <script type="text/javascript">
      $('#new_blip_<%= @company.id %>').click(function () {
        $("#new_blip_slide_down_<%= @company.id %>").toggle("slideDown(1000)")
      });
    </script>

  <% end %>
</div>

