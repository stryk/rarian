<% unless current_user.following?(obj) %>
  <div class="<%= big_small %>-follow-btn" style="margin-left:0!important">

    <%= link_to '&nbsp'.html_safe, follow_link,:method => 'put', :remote => true %>
  </div>
<% else %>
  <div class="<%= big_small %>-unfollow-btn" style="margin-left:0!important">
    <%= link_to '&nbsp'.html_safe, unfollow_link,:method => 'put', :remote => true %>
  </div>
<% end %>