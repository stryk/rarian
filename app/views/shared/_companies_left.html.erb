<div class="pull-left span2">
  <div class="row">
    <div class="span12">
      <ul class="thumbnails">
        <li class="span12">
          <div id="content" class="span12 left_div">
            <div class="titlebox"><%= @company.ticker %> Wizards</div>
            <ol>
              <% TopUser.get_top_users(@company, 5).each do |top_user| %>
                <li><%= link_to top_user.user.name, "#" %> (<%= top_user.no_of_votes %>)</li>
              <% end %>
            </ol>
          </div>
        </li>

      </ul>
    </div>

    <div class="span12">
      <ul class="thumbnails">
        <li class="span12">
          <div id="content" class="span12 left_div">
            <div id="company_description">
              <%= render 'companies/description' %>
            </div>
          </div>
        </li>
      </ul>
    </div>


    <div class="span12">
      <ul class="thumbnails">
        <li class="span12">
          <div id="content" class="span12 left_div">
            <div class="titlebox">Year End Target Price</div>
            <div id="target_price">
              <%= render 'companies/target_price' %>
            </div>
          </div>
        </li>
      </ul>
    </div>

    <div class="span12">
      <ul class="thumbnails">
        <li class="span12">
          <div id="content" class="span12 left_div">
            <div class="titlebox">Catalyst</div>
            <div id="catalyst">
              <%= render 'companies/catalyst' %>
            </div>
          </div>
        </li>
      </ul>
    </div>

    <div class="span12">
      <ul class="thumbnails">
        <li class="span12">
          <div id="content" class="span12 left_div">
            <div class="titlebox">Competitor</div>
            <div id="competitor">
              <div id="vote_competitor" class="scroll">
              <%= render 'companies/competitor' %>
            </div>
            </div>
            <% if current_user %>
              <%= link_to "Add Competitor", "#.", :id => 'company_competitor_slide' %>
              <%= render :partial => 'competitors/add_competitor' %>
            <% end %>
          </div>
        </li>
      </ul>
    </div>

    <div class="span12">
      <ul class="thumbnails">
        <li class="span12">
          <div id="content" class="span12 left_div">
            <div class="titlebox">Risk to Company</div>
            <div id="risk">
              <%= render 'companies/risk' %>
            </div>
          </div>
        </li>
      </ul>
    </div>


  </div>

</div>