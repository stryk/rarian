<div class="pull-left span2">
  <div class="row">
    <div class="span12">
      <ul class="thumbnails">
        <li class="span12">
          <div id="content">
            <div class="titlebox"><%= @company.ticker %> Wizards</div>
            <ol>
              <% TopUser.get_top_users(@company, 5).each do |top_user| %>
                <li><%= link_to top_user.user.name, "#" %> (<%= top_user.no_of_votes %>)</li>
              <% end %>
            </ol>
          </div>
        </li>

      </ul>
    </div>

    <div class="span12">
      <ul class="thumbnails">
        <li class="span12">
          <div id="content">
            <div id="company_description">
              <%= render 'companies/description' %>
            </div>
          </div>
        </li>
      </ul>
    </div>


    <div class="span12">
      <ul class="thumbnails">
        <li class="span12">
          <div id="content">
            <div class="titlebox">Year End Target Price</div>
            <div id="target_price">
              <%= render 'companies/target_price' %>
            </div>
          </div>
        </li>
      </ul>
    </div>


  </div>

</div>