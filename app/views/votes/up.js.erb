<% if params[:refresh_div] == "false" %>
<% if current_user.up_voted?(@obj) %>
$("#vote_down_" + '<%= @obj.class.name.downcase+'_'+@obj.id.to_s %>').hide();
$("#vote_up_" + '<%= @obj.class.name.downcase+'_'+@obj.id.to_s %>').show();
<% elsif current_user.down_voted?(@obj) %>
$("#vote_down_" + '<%= @obj.class.name.downcase+'_'+@obj.id.to_s %>').show();
$("#vote_up_" + '<%= @obj.class.name.downcase+'_'+@obj.id.to_s %>').hide();
<% else %>
$("#vote_down_" + '<%= @obj.class.name.downcase+'_'+@obj.id.to_s %>').show();
$("#vote_up_" + '<%= @obj.class.name.downcase+'_'+@obj.id.to_s %>').show();
$('#upvote_number_<%= @obj.class.name.downcase+"_"+@obj.id.to_s %>').html('<%= @obj.reload.net_votes %>');
$('#downvote_number_<%= @obj.class.name.downcase+"_"+@obj.id.to_s %>').html('');
<% end %>
$('#upvote_number_<%= @obj.class.name.downcase+"_"+@obj.id.to_s %>').html('<%= @obj.reload.net_votes %>');
<% else %>
$("#vote_<%= @obj.class.name.downcase %>").html('<%= j render "companies/#{@obj.class.name.downcase}" %>');
<% end %>
