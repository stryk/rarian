<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta name="viewport" content="width=device-width" />
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<title>AlphaPitch</title>
<link rel="stylesheet" type="text/css" href="css/email.css" />
</head>
<body bgcolor="#FFFFFF">
<!-- HEADER -->
<table class="head-wrap" bgcolor="#3b5998">
  <tr>
    <td></td>
    <td class="header container" ><div class="content">
        <table bgcolor="#3b5998">
          <tr>
            <td><img src="images/logo.png" alt="AlphaPitch" /></td>
            <td align="right"><h6 class="collapse">Basic</h6></td>
          </tr>
        </table>
      </div></td>
    <td></td>
  </tr>
</table>
<!-- /HEADER -->
<!-- BODY -->
<table class="body-wrap">
  <tr>
    <td></td>
    <td class="container" bgcolor="#FFFFFF"><div class="content">
        <table>
          <tr>
            <td><h3>Hi, <%= @questioner.name %>,</h3>
              <p class="lead"><%= link_to @answerer.name, user_url(@answerer) %> has answered your question:</p>
              <p>The answer posted is as follows:</p>
              <%= @answer.content.html_safe %>

              <!-- Callout Panel -->
              <p class="callout"> <%= link_to "Your member page", user_url(@questioner) %></p>
              <!-- /Callout Panel -->
              <!-- social & contact -->
              <table class="social" width="100%">
                <tr>
                  <td><!-- column 1 -->
                    <table align="left" class="column">
                      <tr>
                        <td><h5 class="">Connect with Us:</h5>
                          <p class=""><a href="#" class="soc-btn fb">Facebook</a> <a href="#" class="soc-btn tw">Twitter</a> <a href="#" class="soc-btn gp">Google+</a></p></td>
                      </tr>
                    </table>
                    <!-- /column 1 -->
                    <!-- column 2 -->
                    <table align="left" class="column">
                      <tr>
                        <td><h5 class="">Contact Info:</h5>
                          <p><br/>
                            Email: <strong><a href="emailto:member_services@alphapitch.com">member_services@alphapitch.com</a></strong></p></td>
                      </tr>
                    </table>
                    <!-- /column 2 -->
                    <span class="clear"></span> </td>
                </tr>
              </table>
              <!-- /social & contact -->
            </td>
          </tr>
        </table>
      </div>
      <!-- /content -->
    </td>
    <td></td>
  </tr>
</table>
<!-- /BODY -->
<!-- FOOTER -->
<table class="footer-wrap">
  <tr>
    <td></td>
    <td class="container"><!-- content -->
      <div class="content">
        <table>
          <tr>
            <td align="center"><p> <a href="#">Terms</a> | <a href="#">Privacy</a> | <a href="#">
                <unsubscribe>Unsubscribe</unsubscribe>
                </a> </p></td>
          </tr>
        </table>
      </div>
      <!-- /content -->
    </td>
    <td></td>
  </tr>
</table>
<!-- /FOOTER -->
</body>
</html>
